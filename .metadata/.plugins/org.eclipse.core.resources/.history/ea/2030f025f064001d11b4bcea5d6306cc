package pokemons;

import java.util.Random;

public class Pokemon0 {
	private String nom;
	private int niveau;
	private int hp;
	private int atk;
	
	private static Random r = new Random(); //static pour partager l'instance et pas pour cr√©er chaque fois une instance pour chaque objet
	private static final int niveauMax = 10;
	
	public Pokemon0(String pNom) {
		this.nom = pNom;
		this.niveau = r.nextInt(1,niveauMax+1);
		this.hp = 2*this.niveau;
		this.atk = (this.niveau/2)+1;
	}
	
	public boolean isKO() {
		return this.hp == 0;
	}
}
